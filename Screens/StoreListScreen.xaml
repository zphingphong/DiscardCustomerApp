<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="com.panik.discard.StoreListScreen"
	Title="Stores">
	<ContentPage.Content>
		<StackLayout>
			<SearchBar
				Placeholder="Search" />
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="*" />
						<RowDefinition
							Height="*" />
						<RowDefinition
							Height="*" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="*" />
						<ColumnDefinition
							Width="*" />
					</Grid.ColumnDefinitions>
					<Label
						Text="Autosized cell"
						Grid.Row="0"
						Grid.Column="0"
						BackgroundColor="Blue" />
					<BoxView
						Color="Silver"
						HeightRequest="0"
						Grid.Row="0"
						Grid.Column="1" />
					<BoxView
						Color="Teal"
						Grid.Row="1"
						Grid.Column="0" />
					<Label
						Text="Leftover space"
						Grid.Row="1"
						Grid.Column="1"
						BackgroundColor="Aqua"
						XAlign="Center"
						YAlign="Center" />
				</Grid>
		</StackLayout>
	</ContentPage.Content>
	<ContentPage.ToolbarItems>
		<ToolbarItem
			Name="Add">
		</ToolbarItem>
	</ContentPage.ToolbarItems>
</ContentPage>