<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="com.panik.discard.StoreCardScreen">
	<ContentPage.Content>
		<StackLayout
			Padding="0, 5, 0, 0">
			<StackLayout x:Name="userInfoContainer">
				<Image
					Source="{Binding qrImageDirectoryPath}" />
			</StackLayout>
			<StackLayout
				x:Name="storeInfoContainer">
				<Label
					Text="{Binding address.street}"
					XAlign="Center">
				</Label>
				<Label
					Text="{Binding address.city}, {Binding address.province}, {Binding address.postalCode}"
					XAlign="Center">
				</Label>
				<Label
					Text="{Binding phones[0]}"
					XAlign="Center">
				</Label>
			</StackLayout>
			<Grid
				x:Name="stampCardGrid">
				<Grid.RowDefinitions>
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="*" />
					<RowDefinition
						Height="100" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="Auto" />
					<ColumnDefinition
						Width="*" />
					<ColumnDefinition
						Width="100" />
				</Grid.ColumnDefinitions>
			</Grid>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>