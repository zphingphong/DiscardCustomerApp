<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="com.panik.discard.LoginScreen" BackgroundImage="bg.png">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
	</ContentPage.Padding>
	<StackLayout Spacing="10" Padding="20, 0, 20, 0">
		<StackLayout Padding="20, 30, 0, 60">
			<Image Source="loginLogo.png" WidthRequest="200" HorizontalOptions="Center" />
		</StackLayout>
		<Button Text="Log In With Facebook" Clicked="LoginWithFacebook" Style="{StaticResource ButtonWithBoxStyle}" />
		<Button Text="Log In With Google" Clicked="LoginWithGoogle" Style="{StaticResource ButtonWithBoxStyle}" />
	</StackLayout>
</ContentPage>
