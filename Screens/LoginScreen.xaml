<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="com.panik.discard.LoginScreen"
	BackgroundImage="bg.png">
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			iOS="0, 20, 0, 0" />
	</ContentPage.Padding>
	<RelativeLayout>
		<StackLayout
			RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
			Spacing="10"
			Padding="20, 0, 20, 0">
			<StackLayout
				Padding="20, 30, 0, 60">
				<Image
					Source="login-logo.png"
					WidthRequest="200"
					HorizontalOptions="Center" />
			</StackLayout>
			<Button
				Text="Sign in With Facebook"
				Clicked="LoginWithFacebook"
				Style="{StaticResource ButtonWithBoxStyle}"
				Image="facebook.png"
				HeightRequest="50" />
			<Button
				Text="Sign in With Google    "
				Clicked="LoginWithGoogle"
				Style="{StaticResource ButtonWithBoxStyle}"
				Image="google.png"
				HeightRequest="50" />
		</StackLayout>
		<ActivityIndicator
			x:Name="loadingMask"
			Color="#FF9500"
			IsRunning="false"
			VerticalOptions="CenterAndExpand"
			HorizontalOptions="CenterAndExpand"
			RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=0.47}"
			RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Factor=0.40}" />
	</RelativeLayout>
</ContentPage>