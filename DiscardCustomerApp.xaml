<Application
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="com.panik.discard.App">
	<Application.Resources>
		<ResourceDictionary>
			<Style
				x:Key="ButtonWithBoxStyle"
				TargetType="Button">
				<Setter
					Property="TextColor"
					Value="#FF9500" />
				<Setter
					Property="BorderRadius"
					Value="10" />
				<Setter
					Property="BorderWidth"
					Value="1" />
				<Setter
					Property="BorderColor"
					Value="#FF9500" />
			</Style>
			<Style
				x:Key="ButtonStyle"
				TargetType="Button">
				<Setter
					Property="TextColor"
					Value="#FF9500" />
			</Style>
			<Style
				x:Key="LabelStyle"
				TargetType="Label">
				<Setter
					Property="TextColor"
					Value="#FF9500" />
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>